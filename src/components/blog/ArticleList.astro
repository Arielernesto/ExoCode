    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Últimos artículos</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {articles.map((article, index) => (
          <article  class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
            <div class="p-6">
              <div class="flex items-center mb-4">
                <img
                  src={article.icon}
                  alt=""
                  width={48}
                  height={48}
                  class={`rounded mr-4 ${
                    article.type === 'js' ? 'bg-yellow-100' :
                    article.type === 'react' ? 'bg-cyan-100' :
                    'bg-gray-100'
                  }`}
                />
                <div>
                  <h3 class="font-semibold text-xl mb-1">{article.title}</h3>
                  <time class="text-sm text-gray-500 dark:text-gray-400">{article.date}</time>
                </div>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-4">{article.excerpt}</p>
              <a href={article.href} class="text-blue-600 dark:text-blue-400 hover:underline">
                Leer más →
              </a>
            </div>
          </article>
        ))}
