---
import Layout from '../../layouts/Layout.astro'
import ProjectShowcase from '../../components/projects/ProjectShowcase.svelte'
import ProductShowcase from '../../components/projects/ProductShowcase.svelte'
---

<Layout>
  <main>
    <!-- Hero Banner con fondo morado similar al de blog -->
    <div class="relative overflow-hidden bg-gradient-to-br from-[#8a3ffc] to-[#6023c0] text-white">
      <!-- Animated particles background -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 opacity-20">
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
          <div class="particle"></div>
        </div>
      </div>
      
      <div class="px-4 py-24 relative z-10">
        <div class="max-w-6xl mx-auto text-center">
          <span class="inline-block px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm text-white text-sm font-medium mb-4">
            Proyectos ExoCode
          </span>
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 leading-tight text-white">
            Soluciones digitales que transforman
          </h1>
          <p class="text-xl md:text-2xl text-white/80 mb-8 max-w-3xl mx-auto">
            Descubre nuestras creaciones y productos desarrollados con las últimas tecnologías
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#proyectos" class="bg-white text-[#8854d0] px-6 py-3 rounded-full font-medium hover:bg-opacity-90 transition-all transform hover:-translate-y-1 shadow-lg">
              Ver proyectos
            </a>
            <a href="/contact" class="bg-transparent border-2 border-white/30 backdrop-blur-sm px-6 py-3 rounded-full font-medium hover:bg-white/10 transition-all transform hover:-translate-y-1">
              Contactar
            </a>
          </div>
        </div>
      </div>
      
      <!-- Decorative wave -->
      <div class="absolute bottom-0 left-0 right-0">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto">
          <path fill="#ffffff" fill-opacity="1" d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
        </svg>
      </div>
    </div>

    <!-- Proyectos section - AHORA PRIMERO -->
    <div id="proyectos" class="scroll-mt-20">
      <ProjectShowcase client:load />
    </div>
    
    <!-- Productos section - AHORA SEGUNDO -->
    <ProductShowcase client:load />

    <!-- Call to Action Mejorado -->
    <div class="relative bg-white dark:bg-gray-800">

     
    </div>
  </main>
</Layout>

<style>
  /* Animations for the particles */
  .particle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    box-shadow: 0 0 10px 2px rgba(255, 255, 255, 0.2);
  }

  .particle:nth-child(1) {
    top: 20%;
    left: 10%;
    width: 80px;
    height: 80px;
    animation: float 15s ease-in-out infinite alternate;
  }
  
  .particle:nth-child(2) {
    top: 60%;
    left: 20%;
    width: 40px;
    height: 40px;
    animation: float 12s ease-in-out infinite alternate-reverse;
  }
  
  .particle:nth-child(3) {
    top: 30%;
    left: 50%;
    width: 60px;
    height: 60px;
    animation: float 18s ease-in-out infinite alternate;
  }
  
  .particle:nth-child(4) {
    top: 70%;
    left: 80%;
    width: 50px;
    height: 50px;
    animation: float 14s ease-in-out infinite alternate-reverse;
  }
  
  .particle:nth-child(5) {
    top: 10%;
    left: 85%;
    width: 70px;
    height: 70px;
    animation: float 16s ease-in-out infinite alternate;
  }
  
  .particle:nth-child(6) {
    top: 45%;
    left: 30%;
    width: 30px;
    height: 30px;
    animation: float 12s ease-in-out infinite alternate-reverse;
  }
  
  .particle:nth-child(7) {
    top: 15%;
    left: 30%;
    width: 20px;
    height: 20px;
    animation: float 10s ease-in-out infinite alternate;
  }
  
  .particle:nth-child(8) {
    top: 80%;
    left: 50%;
    width: 25px;
    height: 25px;
    animation: float 13s ease-in-out infinite alternate-reverse;
  }
  
  .particle:nth-child(9) {
    top: 40%;
    left: 90%;
    width: 15px;
    height: 15px;
    animation: float 11s ease-in-out infinite alternate;
  }
  
  .particle:nth-child(10) {
    top: 85%;
    left: 10%;
    width: 35px;
    height: 35px;
    animation: float 17s ease-in-out infinite alternate-reverse;
  }
  
  .particle:nth-child(11) {
    top: 25%;
    left: 70%;
    width: 45px;
    height: 45px;
    animation: float 14s ease-in-out infinite alternate;
  }
  
  .particle:nth-child(12) {
    top: 50%;
    left: 40%;
    width: 55px;
    height: 55px;
    animation: float 19s ease-in-out infinite alternate-reverse;
  }

  @keyframes float {
    0% {
      transform: translateY(0) translateX(0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-20px) translateX(10px) scale(1.05);
      opacity: 0.5;
    }
    100% {
      transform: translateY(10px) translateX(-15px) scale(0.95);
      opacity: 0.2;
    }
  }
</style> 